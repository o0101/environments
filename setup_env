# install aptitude
sudo apt-get install aptitude
ssh-keygen -t rsa -b 4096 -C $1
eval $( ssh-agent -s )
ssh-add .ssh/id_rsa
echo "Add this key to GitHub"
head .ssh/id_rsa.pub
# get git
sudo apt install git
# setup git
git config --global user.email "$1"
git config --global user.name "$2"
git config --global core.editor "vim"
# get vim environment
git clone git@github.com:dosaygo-coder-0/environments.git
# setup env
cp environments/.bashrc .
cp environments/.vimrc .
sudo cp environments/vimrc /etc/vim/vimrc
# get pip
curl https://bootstrap.pypa.io/get-pip.py -o getpip.py
sudo python getpip.py
# get tornado
sudo pip install tornado
# install npm 
curl -sL https://deb.nodesource.com/setup_6.x | sudo -E bash -
sudo apt-get install -y nodejs
# install npm
curl https://npmjs.org/install.sh | sudo sh

